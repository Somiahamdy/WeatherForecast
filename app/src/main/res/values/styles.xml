<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>
    <style name="text_withe_bold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_withe_bold_16" parent="text_withe_bold">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text_withe_20" parent="text_withe_bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text_withe_30" parent="text_withe_bold">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text_withe_bold_60" parent="text_withe_bold">
        <item name="android:textSize">60sp</item>
    </style>
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>